<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/lbl_def_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lbl_def_margin"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Filter by tag:"
        tools:text="Filter by tag:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTagList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lbl_def_margin"
        tools:listitem="@layout/tag_list_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!--
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Filter" />
        -->

        <Button
            android:id="@+id/btnTagListReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            tools:text="Reset" />
    </LinearLayout>

</LinearLayout>
